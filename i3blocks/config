# Global settings
separator=false
markup=none
interval=1

# Time & Date
[time]
command=date '+ï€— %H:%M  ï³ %a, %b %d'
interval=1

# CPU Load
[cpu]
command=top -bn1 | awk '/Cpu\(s\)/ { printf("ï‹› %.1f%%", $2 + $4) }'
interval=5

# RAM Usage
[memory]
command=free -h | awk '/^Mem/ { printf("ï”¸ %s / %s", $3, $2) }'
interval=10

# Disk Space
[disk]
command=df -h / | awk 'NR==2 { printf("ï‚  %s / %s", $3, $2) }'
interval=60

# Network
[network]
command=ip -4 addr show wlan0 | grep -oP '(?<=inet\s)\d+(\.\d+){3}' | awk '{print "ï‡« " $1}' || echo "ïª© Offline"
interval=10

# Battery
[battery]
command=acpi -b | awk -F', ' '{gsub(/Battery 0: /,"", $1); print "ğŸ”‹ " $2 " (" $1 ")"}'
interval=30

# Volume
[volume]
command=pamixer --get-volume-human | sed 's/^/ï€¨ /'
interval=5
signal=10

# Brightness
[brightness]
command=brightnessctl | awk -F'[(|)]' '/Current/ { print "ğŸ”† " $2 }'
interval=10

